{
  "name": "@smart-irrigation/server",
  "packageManager": "yarn@3.1.1",
  "main": "src/main",
  "scripts": {
    "postinstall": "yarn workspace @smart-irrigation/prisma db:generate",
    "codegen": "yarn graphql-codegen && yarn workspace @smart-irrigation/types tsc",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "migrate:create": "node-pg-migrate create -j ts",
    "migrate:up": "node-pg-migrate up --tsconfig=./tsconfig.json",
    "migrate:down": "node-pg-migrate down --tsconfig=./tsconfig.json",
    "seed": "ts-node seeds/index.ts",
    "start": "yarn nest start",
    "start:dev": "yarn nest start --watch",
    "start:debug": "yarn nest start --debug --watch",
    "start:prod": "yarn node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@nestjs/apollo": "^10.0.2",
    "@nestjs/axios": "^0.0.6",
    "@nestjs/common": "^8.2.6",
    "@nestjs/config": "^1.1.7",
    "@nestjs/core": "^8.2.6",
    "@nestjs/graphql": "^9.1.2",
    "@nestjs/platform-express": "^8.2.6",
    "@smart-irrigation/prisma": "1.0.0",
    "@yarnpkg/pnpify": "^3.1.1-rc.15",
    "apollo-server-core": "^3.6.3",
    "apollo-server-express": "^3.6.3",
    "date-fns": "^2.28.0",
    "graphql": "^15",
    "node-pg-migrate": "benkroeger/node-pg-migrate",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.3.1",
    "@graphql-codegen/typescript": "2.4.2",
    "@nestjs/cli": "^8.2.0",
    "@nestjs/schematics": "^8.0.6",
    "@nestjs/testing": "^8.2.6",
    "@types/eslint": "^8",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.17",
    "@types/pg": "^8",
    "@types/prettier": "^2",
    "@types/rimraf": "^3",
    "@types/source-map-support": "^0",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "jest-mock-extended": "^2.0.4",
    "prettier": "^2.5.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.5.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  }
}
